{
  "name": "stuck-detector",
  "displayName": "Stuck Detector",
  "description": "AI-powered stuck detection for VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stuckDetector.checkStatus",
        "title": "Stuck Detector: Check Status"
      },
      {
        "command": "stuckDetector.getHint",
        "title": "Stuck Detector: Get Hint"
      },
      {
        "command": "stuckDetector.toggleMonitoring",
        "title": "Stuck Detector: Toggle Monitoring"
      }
    ],
    "configuration": {
      "title": "Stuck Detector",
      "properties": {
        "stuckDetector.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Backend server URL"
        },
        "stuckDetector.monitoringInterval": {
          "type": "number",
          "default": 10000,
          "description": "Monitoring interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}