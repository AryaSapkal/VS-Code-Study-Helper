{
  "name": "nudge-ai-stuck-detector",
  "displayName": "Nudge.ai",
  "description": "Stop the copy-paste cycle. Get unstuck with thoughtful hints that help you learn, not just build.",
  "publisher": "nudgeai",
  "icon": "assets/icon.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stuckDetector.checkStatus",
        "title": "Stuck Detector: Check Status"
      },
      {
        "command": "stuckDetector.getHint",
        "title": "Stuck Detector: Get Hint"
      },
      {
        "command": "stuckDetector.toggleMonitoring",
        "title": "Stuck Detector: Toggle Monitoring"
      },
      {
        "command": "stuckDetector.simulateStuck",
        "title": "Stuck Detector: Simulate Stuck (Testing)"
      }
    ],
    "configuration": {
      "title": "Stuck Detector",
      "properties": {
        "stuckDetector.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Backend server URL"
        },
        "stuckDetector.monitoringInterval": {
          "type": "number",
          "default": 20000,
          "description": "Monitoring interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}